<h1><%= t('cmn_dict.business')+'一覧' %></h1>

<div class="my-3 p-3 bg-white rounded box-shadow">
	<h6 class="border-bottom border-gray pb-2 mb-0">表示件数<%= @res_cnt %>件</h6>
	<%=form_tag('edit') do %>
		<div class="media-body app-datablock">
			<%= label_tag('keyword') %><%= text_field_tag('keyword') %>
		</div>
		<div class="d-flex justify-content-end">
			<%= submit_tag('search!') %>
		</div>
	<% end %>


	<% 	@businesses.each do |business| %>
		<div class="media text-muted pt-3">
			<div class="media-body app-datablock">
				<div class="app-data-title">
					<%=  get_business_link(business) %>
				</div>
				<div class="d-block p-4">
					<h4><%= Business.human_attribute_name("office") %></h4>
					<% if business.office.blank? then
					%>
						<div class="d-flex justify-content-end">
							<button type="button" id="assosiate_person" class="btn btn-primary" data-toggle="modal" data-target="#searchModal"> 親事業所紐付け </button>
						</div>
					<% else %>
						<div class="sl-content">
							<%= business.office.cd %> : <%= business.office.name %>
							( <%=business.office.primary_address.location_long %> )
						</div>
					<% end %>
				</div>
			</div>

		</div>
	<% end %>

	<small class="d-block text-right mt-3">
		<a href="#">All updates</a>
	</small>
</div>

