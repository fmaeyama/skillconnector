- num = hat_iteration.index
- selected_id = skill.skill_type_id.blank? ? -1 : skill.skill_type_id
.hat_input
	.sl-row-border-secondary
		.col-12
			%span{class:"sl_title"}
				= var.skill_levels[key].name
			%span{class:"sl_content"}
				= collection_select "skill[#{key}][#{num}]", 'skill_type_id', var.skill_types[key], :id,  :name, include_blank: t("cmn_sentence.no_selected", model:Skill.model_name.human), selected: selected_id
			%span{class:"sl_title"}
				= SkillType.human_attribute_name("memo")
			%span{class:"sl_content"}
				= text_field_tag "skill[#{key}][#{num}][memo]", skill.memo
	.row
		.col-12
			= link_to t("cmn_sentence.deleteTitle", model: Skill.model_name.human), "javascript.void(0);"
