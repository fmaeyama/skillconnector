<div class="row">
	<div class="col-2">
		<%= business.business_type.name %>
	</div>
	<div class="col-6">
		<span class="sl-title"><%= business.name %></span>
		<span class="sl-content"><%= business.description %></span>
	</div>
	<div class="col-4">
		<%= link_to url:{controller:"businesses", action: "edit", id:business.id}, html_options:"target=_blank" do %>
			<%= button_tag "編集", type: "button" %>
		<% end %>
		<%= button_tag "削除", type: "button", onclick: "deleteBusiness(#{business.id})" %>
	</div>
</div>
