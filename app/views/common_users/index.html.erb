<h1>CommonUsers#index</h1>

<div class="my-3 p-3 bg-white rounded box-shadow">
	<h6 class="border-bottom border-gray pb-2 mb-0">Resgeterd Skilled Person List</h6>

	<%=form_tag('/update') do %>
		<% 	@allusers.each do |user| %>
			<div class="media text-muted pt-3">
				<img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1"
				     alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;"
				     src="<%= user.getUserImages["main"] %>" data-holder-rendered="true">
				<p class="media-body app-datablock">
					<div id="userid-<%=user.id%>" class="app-data-title"><%=user.id%></div>

					<span class="app-data-label">loginid:</span><span class="app-data-uneditable"><%=user.email %></span>
					<% if user.person_info.blank? then %>
						<button type="button" id="assosiate_person"> 検索 </button>
						<button type="button" id="create_person" onClick="location.href='<%=url_for(controller: "common_users", action: "new") %>'"> 新規作成</button>
					<% else %>
						<%= label_tag(:first_name, "first_name") %>
						<%= text_field_tag(:first_name)%>
					<% end %>
				</p>
			</div>
		<% end %>
	<% end%>



	<small class="d-block text-right mt-3">
		<a href="#">All updates</a>
	</small>
</div>

