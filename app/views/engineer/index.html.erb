<h1><%= Engineer.model_name.human+'一覧' %></h1>

<div class="my-3 p-3 bg-white rounded box-shadow">
	<h6 class="border-bottom border-gray pb-2 mb-0">表示件数<%= @res_cnt %>件</h6>
	<%=form_tag('edit') do %>
		<div class="media-body app-datablock">
			<%= label_tag('keyword') %><%= text_field_tag('keyword') %>
		</div>
		<div class="d-flex justify-content-end">
			<%= submit_tag('search!') %>
		</div>
	<% end %>


	<% 	@engineers.each do |engineer| %>
		<div class="media text-muted pt-3">
			<div class="media-body app-datablock">
				<div class="app-data-title">
					id: <span id="business-id-<%=engineer.id%>"> <%=engineer.id%></span>
					<%= link_to controller:"engineer", action:"edit", id:engineer.id do %>
						<span class="sl-content"><%= engineer.person_info.getFullName %></span>
					<% end %>
					<span class="sl-content"><%=engineer.engineer_registration_type.name %></span>
					<span class="sl-content"><%=engineer.registration_memo %></span>
					<span class="sl-content"><%=engineer.engineer_status_type.name %></span>
				</div>
				<% unless engineer.office.blank? then %>
					<div class="d-block p-4">
						<%= engineer.office.cd %> : <%= engineer.office.name %>
					</div>
				<% end %>
				<h4> <%=Career.model_name.human %></h4>
				<%= render partial: "career_description", collection:engineer.careers, as:"career", locals:{var:@var} %>
				<h4> <%=EngineerHopeBusiness.model_name.human %></h4>
				<%= render partial: "hope_business_description", collection:engineer.engineer_hope_businesses, as:"hope", locals:{var:@var} %>
			</div>

		</div>
	<% end %>

	<small class="d-block text-right mt-3">
		<a href="#">All updates</a>
	</small>
</div>

