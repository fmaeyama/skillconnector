-# modal_var=@var, eng_result
.row
	- if eng_result.nil?
		.col-12
			= modal_var.modal_dlg_message unless modal_var.modal_dlg_message.blank?
	- else
		- offer_id = modal_var.mode
		.col-12
			= "#{eng_result.size}ä»¶ : "
			= modal_var.modal_dlg_message unless modal_var.modal_dlg_message.blank?
		- eng_result.each do |engineer|
			.row
				.col-12
					= engineer.eng_cd + "[#{engineer.engineer_status_type.name}]"
					= link_to(engineer.person_info.getFullName,url_for(controller: "proposal", action:"new",offer:offer_id, engineer:engineer.id))
				.col-12
					= engineer.get_engineer_hiring
				.col-12
					%span.sl-title
						= Career.model_name.human
					%span.sl-content
						= engineer.get_career_summary
				.col-12
					%span.sl-title
						=EngineerHopeBusiness.model_name.human
					%span.sl-content
						=engineer.get_hope_business_summary