-# modal_var=@var, eng_result
.px-2
	.row
	- if eng_result.nil?
		.col-12
			= modal_var.modal_dlg_message unless modal_var.modal_dlg_message.blank?
	- else
		.col-12
			= "#{eng_result.size}ä»¶ : "
			= modal_var.modal_dlg_message unless modal_var.modal_dlg_message.blank?
		- eng_result.each do |engineer|
			.sl-border-primary
				.col-12
					.row
						.col-12
							= engineer.eng_cd + "[#{engineer.get_status}]"
					.row
						.col-12
							= helper_get_link_from_var engineer,modal_var
					.row
						.col-12
							= engineer.get_engineer_hiring
				- if false
					.row
						.col-12
							%span.sl-title
								= Career.model_name.human
							%span.sl-content
								= engineer.get_career_summary
					.row
						.col-12
							%span.sl-title
								=EngineerHopeBusiness.model_name.human
							%span.sl-content
								=engineer.get_hope_business_summary
				- else
					.row
						.col-12
							Need To Debug on engineer\_search_res.html.haml
